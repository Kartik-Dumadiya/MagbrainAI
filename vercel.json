{
  "version": 2,
  "projects": [
    {
      "root": "frontend",
      "name": "magbrainai-frontend",
      "builds": [
        {
          "src": "frontend/package.json",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "dist"
          }
        }
      ],
      "routes": [
        {
          "src": "/(.*)",
          "dest": "/index.html"
        }
      ]
    },
    {
      "root": "backend",
      "name": "magbrainai-backend",
      "builds": [
        {
          "src": "backend/server.js",
          "use": "@vercel/node"
        }
      ],
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "backend/server.js"
        }
      ]
    }
  ]
}